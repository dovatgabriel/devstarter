{
  "name": "devstarter",
  "author": {
    "name": "Gabriel Dovat",
    "email": "gabriel@optifit.app"
  },
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "devstarter": "dist/index.js",
    "ds": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=cjs --target=node18 --outfile=pkg-entry.cjs",
    "pack": "npm run build && npm run bundle && npx pkg pkg-entry.cjs --targets node18-macos-$(uname -m | sed 's/x86_64/x64/;s/arm64/arm64/') --output devstarter && chmod +x devstarter && ./devstarter --help"
  },
  "pkg": {
    "scripts": [
      "pkg-entry.cjs"
    ],
    "assets": [
      "package.json"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^5.1.1",
    "inquirer": "^8.2.4",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-unicode-sets-regex": "^7.27.1",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.5.0",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
